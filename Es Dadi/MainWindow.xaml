<Window x:Class="Es_Dadi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Es_Dadi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="TeloVerdeDaGioco" HorizontalAlignment="Left" Height="268" Margin="187,87,0,0" VerticalAlignment="Top" Width="401" Source="Telo verde.jpg"/>

        <Button x:Name="btnLanciaDadi" Content="Lancia dadi" HorizontalAlignment="Left" Height="63" Margin="187,292,0,0" VerticalAlignment="Top" Width="98" Background="White" BorderBrush="Black" FontFamily="Stencil" Click="btnLanciaDadi_Click"/>
        <Button x:Name="btnStoppaDadi" Content="Stoppa dadi" HorizontalAlignment="Left" Height="63" Margin="490,292,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="1,1" Background="White" BorderBrush="Black" FontFamily="Stencil" Click="btnStoppaDadi_Click"/>
        <Image x:Name="Dadi1" HorizontalAlignment="Left" Height="62" Margin="262,153,0,0" VerticalAlignment="Top" Width="64" Source="faccia dado 1.jpg"/>
        <Image x:Name="Dadi2" HorizontalAlignment="Left" Height="62" Margin="464,153,0,0" VerticalAlignment="Top" Width="63" Source="faccia dado 3.jpg"/>

    </Grid>
</Window>
